{
    "manifestVersion": 1,
    "id": "JumpCodeWhisper",
    "name": "Code Whisper",
    "version": "0.1.0",
    "publisher": "JumpInnovations",
    "public" : false,
    "galleryFlags": [
        "Public",
        "Preview"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "A task that reviews Pull Requests using GPT models from OpenAI or Anthropic",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "tags": [
        "OpenAI",
        "Anthropic",
        "GPT",
        "PullRequest",
        "Review"
    ],
    "files": [
        {
            "path": "CodeWhisper"
        }
    ],
    "repository" : {
        "type" : "git",
        "uri" : "https://github.com/michel-jump/azure-pipeline-ai-pr-review"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "contributions": [
        {
            "id": "CodeWhisper",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "CodeWhisper"
            }
        }
    ]
}